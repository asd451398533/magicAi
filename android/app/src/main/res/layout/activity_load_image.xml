<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_select_image_page">

    <TextView
        android:id="@+id/tv_back_to_video"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:text="请选择或拍一张照片"/>

    <LinearLayout
        android:id="@+id/ll_from_gallery"
        android:layout_width="246dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/tv_tips"
        android:orientation="horizontal"
        android:background="@drawable/bg_image_select_button">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:textSize="18dp"
            android:text="从相册选择"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_from_camera"
        android:layout_width="246dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ll_from_gallery"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_image_select_button">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:src="@drawable/take_photo_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="42dp"
            android:textSize="18dp"
            android:text="拍照"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_from_video"
        android:layout_width="246dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ll_from_camera"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_image_select_button">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:src="@drawable/take_photo_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="42dp"
            android:textSize="18dp"
            android:text="视频"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>
